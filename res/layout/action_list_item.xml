<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_centerHorizontal="true"
	android:orientation="vertical"
	android:background="@drawable/activity_element_shape">

    <!-- Cause title -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="@color/green_palette">

        <TextView
            android:id="@+id/cause_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#DogHero"
            android:textColor="@color/white_yellow_tint_palette"
            android:textSize="20sp"
            android:padding="5dp" />

    </LinearLayout>

    <!-- Activity Image -->
	<ImageView
		android:id="@+id/activity_image"
		android:layout_width="fill_parent"
		android:layout_height="350dp"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		android:contentDescription="@string/hello_world"
		android:background="@drawable/image_placeholder_shape"/>
	
	<!-- Description section -->
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp">

	    <ImageView
	        android:id="@+id/profile_image"
	        android:contentDescription="@string/hello_world"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/profile_circle_shape"/>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_vertical">

	        <TextView
		        android:id="@+id/user_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="HackerOfDreams"
		        android:textColor="@color/orange_palette"
		        android:textStyle="bold"
		        android:layout_marginLeft="10dp"
		        android:textSize="14sp" />

		    <TextView
		        android:id="@+id/activity_body"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Que agusto descansan en su nuevo hogar, los encontre abandonados en un bote de basura. Pero ya tienen donde relajarse y disfrutar del invierno. Son tres hermanos. Ya quiero lograr los caracteres creo que son demasiados no se si exageramos con tantos."
		        android:textColor="@color/gray_dark"
		        android:textSize="14sp"
		        android:layout_marginLeft="10dp" />
	    </LinearLayout>
	</LinearLayout>

    <!-- Likes and comments section -->
    <ImageView
	    android:src="@android:drawable/divider_horizontal_textfield"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingBottom="2dp"
	    android:paddingTop="2dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

		<TextView
			android:id="@+id/likes_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="500 Likes"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="@color/orange_palette"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" Â· "
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="@color/gray_dark"/>

		<TextView
			android:id="@+id/coments_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="150 Comentarios"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="@color/orange_palette"/>
	</LinearLayout>

	<ImageView
	    android:src="@android:drawable/divider_horizontal_textfield"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingBottom="2dp"
	    android:paddingTop="2dp" />

	<!-- Like and comment buttons -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:orientation="horizontal">
		<ImageButton
		    android:id="@+id/comment_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:src="@drawable/coment_button"
		    android:background="@null"/>

		<ImageButton
		    android:id="@+id/like_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:src="@drawable/like_button"
		    android:background="@null"/>
	</LinearLayout>
</LinearLayout>
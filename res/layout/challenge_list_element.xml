<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">
    
    <TextView 
        android:id="@+id/challenge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/challenge_number_bg_shape"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        
        <TextView
            android:id="@+id/challenge_name"
            style="@style/ShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayuda a un desconocido"
            android:textSize="16sp"
            android:textColor="@color/white" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/challenge_area"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Humanidad"
	            android:textSize="16sp"
	            android:textColor="@color/gray_dark" />
            
            <TextView
                android:id="@+id/challenge_accomplished"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="12 logros"
	            android:textSize="12sp"
	            android:textColor="@color/shadow_gray"
	            android:layout_marginLeft="5dp" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow" />
    
</LinearLayout>